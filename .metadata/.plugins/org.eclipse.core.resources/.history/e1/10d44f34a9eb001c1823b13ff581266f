package variable;

public class 함수연습 {
	public int add (int a, int b) {
		return a + b;
	}
	
	public int minus(int a, int b) {
		return a - b;
	}
	
	public int bigNumMinus(int a, int b) {
		int result = 0;
		
		if (a > b) {
			result = minus(a, b);
		} else {
			result = minus(b, a);
		}
		return result;
	}
		
	
}

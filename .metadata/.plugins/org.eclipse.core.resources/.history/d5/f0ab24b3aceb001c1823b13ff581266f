package variable;

public class 함수연습 {
	public int add (int a, int b) {
		return a + b;
	}
	
	public int minus(int a, int b) {
		return a - b;
	}
	
	public int bigNumMinus(int a, int b) {
		
		if (a > b) {
			return minus(a, b);
		} else {
			return minus(b, a);
		}
	}
	
	public int getMaxNum (int a, int b, int c) {
		int max = a;
		if (max < b) {
			max = b;
		}
		if (max < c) {
			max = c;
		}
		return max;
	}
		
}
